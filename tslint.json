{
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "class-name": true,
    "comment-format": [true, "check-space", { "ignore-words": ["TODO", "HACK", "NOTE"] }],
    "curly": true,
    "eofline": true,
    "forin": true,
    "indent": [true, "spaces"],
    "jsdoc-format": true,
    "label-position": true,
    "max-line-length": [true, 140],
    "max-classes-per-file": [true, 2],
    "member-access": true,
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-constructor-vars": false,
    "no-debugger": true,
    "no-default-export": true,
    "no-duplicate-variable": true,
    "no-empty": [true, "allow-empty-functions"],
    "no-eval": true,
    "no-inferrable-types": false,
    "no-internal-module": true,
    "no-invalid-this": [true, "check-function-in-method"],
    "no-null-keyword": false,
    "no-require-imports": true,
    "no-shadowed-variable": true, // Disallows shadowing variable declarations
    "no-string-literal": false,
    "no-switch-case-fall-through": true,
    "no-this-assignment": true,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "one-line": [true, "check-open-brace", "check-whitespace"],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "prefer-const": [true, { "destructuring": "all" }],
    "quotemark": [true, "single", "avoid-escape", "jsx-double"],
    "radix": true,
    "semicolon": [true, "always"],
    "switch-default": true,
    "trailing-comma": [true, { "multiline": "always", "singleline": "never" }],
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "typedef-whitespace": [
      // Determines if a space is required or not before the colon in a type specifier
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "space",
        "index-signature": "space",
        "parameter": "space",
        "property-declaration": "space",
        "variable-declaration": "space"
      }
    ],
    "use-isnan": true,
    "use-strict": [false, "check-module", "check-function"],
    "variable-name": [true, "check-format", "allow-pascal-case", "allow-trailing-underscore", "ban-keywords"],
    "interface-name": [true, "never-prefix"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type", "check-type-operator"]
  }
}
