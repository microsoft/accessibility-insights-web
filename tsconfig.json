{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "es2021",
        "module": "es2020",
        "lib": ["es2021", "dom", "scripthost", "webworker"],
        "outDir": "./dist/",
        "rootDir": "./",
        "baseUrl": "./src",
        "strictNullChecks": false,
        "noUnusedLocals": true
    },
    "include": [
        ".eslintrc.js",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "deploy/**/*",
        "tools/**/*",
        "./*.js",
        ".stylelintrc.js",
        "packages/**/*.js",
        ".github/workflows/verify-unchanged-strict-null-checks.js"
    ]
}
