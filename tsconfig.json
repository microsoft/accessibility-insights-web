{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "es2017",
        "module": "amd",
        "lib": ["es2017", "dom", "scripthost"],
        "outDir": "./dist/",
        "rootDir": "./",
        "baseUrl": "./src",
        "typeRoots": ["node_modules/@types"],
        "strictNullChecks": false,
        "noUnusedLocals": true
    },
    "include": [
        ".eslintrc.js",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "deploy/**/*",
        "pipeline/scripts/**/*",
        "tools/**/*",
        "./*.js"
    ]
}
